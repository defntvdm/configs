{
    // color theme
    "workbench.colorTheme": "Gruvbox Dark Hard",
    // onsave newline and whitespace
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // clangd
    "clangd.fallbackFlags": [
        "-xc++"
    ],
    "clangd.arguments": [
        "--background-index",
        "--enable-config",
        "--log=error"
    ],
    // python
    "python.defaultInterpreterPath": "/home/defntvdm/.pyenv/shims/python3",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/home/defntvdm/.pyenv/shims/black",
    "python.formatting.blackArgs": [
        "-l",
        "120",
        "-S",
    ],
    // vim
    "vim.leader": "\\",
    // Just settings
    "security.workspace.trust.untrustedFiles": "open",
    "go.toolsManagement.autoUpdate": true,
    "window.zoomLevel": 1,
    "editor.suggestSelection": "first",
    "editor.fontFamily": "'Fira Mono', 'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
}
